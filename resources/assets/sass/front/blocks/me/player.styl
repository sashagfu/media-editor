.me-player {
  background-color: $white;
  border-radius: 3px;
  border: 1px solid $border;
  box-sizing: content-box;
  min-width: 640px;
  overflow: hidden;
  position: relative;

  &__screen {
    background-color: $black-ter;
    height: 360px;
    position: relative;

    .el-loading-mask {
      background-color: rgba($white,.2);
    }
  }

  &__slider {
    left: 0;
    padding: 0 26px;
    position: absolute;
    right: 0;
    top: -15px;
    width: 100%;
  }

  &__image {
    background: center center/contain no-repeat;
    content: '';
    height: 100%;
    width: 100%;
  }
  &__text {
    height: 100%;
    width: 100%;
  }

  &__controls {
    fl-between();
    align-content: center;
    color: $white-bis;
    flex-direction: row;
    flex-wrap: nowrap;
    min-height: 42px;
    padding: 0 26px;
    position: relative;
  }

  &__spinner {
    cover-all();
    fl-center();
    background-color: $cover-white;
    color: $white-bis;
    z-index: 10;
  }
}
