.me-item-editor {
  display: flex;
  height: 100%;
  left: 0;
  position: absolute;
  top: 0;
  width: 100%;
  z-index: 101;

  &__main {
    background-color: $grey-middle;
    height: 100%;
    flex: 1;

    .tabs-content {
      background: none;
      border: none;
    }

    .tabs {
      background: none;
      border-left: none;
      border-right: none;
      border-top: none;
    }

    .tabs-title {
      &.is-active > a{
        background: $white-ter;
      }
    }

    .tabs-panel {
      &.is-active {
        display: block;
      }
    }
  }

  &__header {
    fnt($white-bis, 25px, $weight-semibold, left);
    padding: 5px;
  }

  &__desc {
    display: flex;
    flex-direction: column;
    height: 100%;
    width: 690px;
  }

  &__buttons {
    fl-center();
    background-color: $grey-middle;
    flex-direction: column;
    flex: 1;
    height: 100%;
    padding: 15px;
    text-align: center;
    width: 100%;
  }

  &__preview {
    margin-bottom: 41px;
    overflow: hidden;
    position: relative;
  }

  &__preview-item {
    border: 1px solid $primary;
    height: 100%;
    width: 100%;
  }
}