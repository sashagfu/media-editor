
.me-slider {
  background-color: $grey;
  border-radius: 4px;
  cursor: pointer;
  height: 8px;
  transition: all .3s;
  width: 100%;


  .handle {
    background-color: $white-bis;
    border: 4px solid $grey-light;
    border-radius: 50%;
    box-shadow: 0 2px 5px rgba(0,0,0,.2);
    flex: none;
    height: 12px;
    margin-top: -2px;
    transition: border-color .3s;
    width: 12px;

    &:hover {
      border-color: $grey-lighter;
    }
  }
}

.me-slider-el {
  width: 100%;
  .el-slider {
    &__runway {
      background-color: $grey;
      margin: 0;
    }
    &__bar {
      background-color: $primary;
    }
    &__button-wrapper {
      height: 18px;
      top: -9px;
      width: 18px;
    }
    &__button {
      background-color:  $white-bis;
      border: 4px solid $grey-light;
      box-shadow: 0 2px 5px rgba(0,0,0,.2);

      &.hover {
        background-color: $grey-lighter;
      }
      &.dragging {
        background-color: $grey-lighter;
      }
    }
  }
}

