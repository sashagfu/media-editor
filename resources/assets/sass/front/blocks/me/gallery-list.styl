.me-gallery-list {
  display: flex;
  flex: 1 1 auto;
  flex-direction: column;
  &__item {
    fl-left();
    flex: 0 0 auto;
    height: auto;
    margin: 0;
    padding: 12px 26px;
    width: 100%;
    &:first-child {
      padding-top: 26px;
    }
    &:last-child {
      padding-bottom: 26px;
    }
    &:not(:last-child) {
      border-bottom: 1px solid $border;
    }
  }
  &--grid {
    padding: 14px 14px 26px 26px;
    flex-direction: row;
    flex-wrap: wrap;
  }
  &__empty {
    cover-all();
    fl-center();
    flex-direction: column;
    flex: 1 1 auto;
    height: auto;
    width: 100%;
    background-color: $white-bis;
  }
}
